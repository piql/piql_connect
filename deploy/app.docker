FROM php:7.3-fpm

RUN apt-get update && apt-get upgrade -y && apt-get install -y libmcrypt-dev libmagickwand-dev mariadb-client libxml2-dev && apt-get autoremove -y
RUN pecl install mcrypt-1.0.2
RUN pecl install imagick-3.4.4
RUN docker-php-ext-install bcmath soap pdo_mysql
RUN docker-php-ext-enable imagick mcrypt
COPY .env.example .env

WORKDIR /var/www
